{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "description": "Vue components.",
  "scripts": {
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "commit": "npx git-cz",
    "docs:dev": "pnpm --filter=docs docs:dev",
    "docs:clean": "pnpm --filter=docs docs:clean",
    "docs:build": "pnpm --filter=docs docs:build",
    "docs:serve": "pnpm --filter=docs docs:serve",
    "docs:release": "pnpm build && pnpm docs:build",
    "lint:lint-staged": "lint-staged",
    "lint:eslint": "eslint --fix --cache \"**/*.{js,jsx,ts,tsx,vue}\"",
    "lint:stylelint": "stylelint --fix --cache \"**/*.{css,scss,less,styl,vue}\"",
    "lint:prettier": "prettier --write  \"**/*.{css,scss,less,styl,js,jsx,ts,tsx,vue}\""
  },
  "dependencies": {
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@vlib/eslint-config": "workspace:*",
    "@vlib/stylelint-config": "workspace:*",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.21.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.2.0",
    "typescript": "^4.7.4"
  }
}
